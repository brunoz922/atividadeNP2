@model IEnumerable<DsiVendas.Models.Fornecedor>

<h1>Lista de Fornecedores</h1>

<p>
  <a asp-action="Criar">Criar Novo Fornecedor</a>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Cidade</th>
      <th scope="col">Telefone</th>
      <th scope="col">Ações</th>

    </tr>
  </thead>
  <tbody>
    @foreach (var fornecedor in Model)
    {
      <tr>
        <td scope="row">@fornecedor.Id</td>
        <td>@fornecedor.Nome</td>
        <td>@fornecedor.Cidade</td>
        <td>@fornecedor.Telefone</td>
        <td>
          <a asp-action="Editar" asp-route-id="@fornecedor.Id">Editar</a> |
          <a asp-action="Detalhes" asp-route-id="@fornecedor.Id">Detalhes</a> |
          <a asp-action="Remover" asp-route-id="@fornecedor.Id">Excluir</a>
        </td>
      </tr>
    }
  </tbody>
</table>